---
import "bootstrap/dist/css/bootstrap.css";
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <title>ZAMG Data Explorer</title>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <nav
      class="navbar navbar-expand navbar-dark shadow-sm mb-5"
      style="background-color: #702065;"
    >
      <div class="container">
        <a class="navbar-brand" href="/">ZAMG Data Explorer</a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="navbar-nav">
            <a class:list={[ 'nav-link', { active: Astro.url.pathname === "/" } ]} href="/">Home</a>
            <a class:list={[ 'nav-link', { active: Astro.url.pathname.startsWith("/datasets") } ]} href="/datasets/">Datasets</a>
            <a class:list={[ 'nav-link', { active: Astro.url.pathname.startsWith("/stations") } ]} href="/stations/">Stationen</a>
            <a class:list={[ 'nav-link', { active: Astro.url.pathname.startsWith("/parameters") } ]} href="/parameters/">Parameter</a>
          </div>
        </div>
      </div>
    </nav>
    <div class="container">
      <slot />
    </div>
  </body>
</html>
